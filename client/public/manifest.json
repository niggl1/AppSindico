{
  "name": "App Síndico - Plataforma Digital para Condomínios",
  "short_name": "App Síndico",
  "description": "Plataforma completa de gestão condominial com suporte offline, timelines, ordens de serviço, manutenções e muito mais.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#1e40af",
